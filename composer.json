{
    "name": "yceruto/open-api-bundle",
    "type": "symfony-bundle",
    "description": "Provides a tight integration of OpenApi into the Symfony full-stack framework",
    "keywords": ["openapi", "swagger", "symfony", "bundle"],
    "license": "MIT",
    "authors": [
        {
            "name": "Yonel Ceruto",
            "email": "yonelceruto@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "symfony/framework-bundle": "^7.0",
        "symfony/serializer": "^7.0",
        "symfony/validator": "^7.0",
        "zircote/swagger-php": "^4.7"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Yceruto\\OpenApiBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yceruto\\Tests\\OpenApiBundle\\": "tests/"
        }
    },
    "minimum-stability": "dev"
}
